<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/music_bottom_seek_bg" />
            <size android:height="@dimen/music_bottom_seek_height" />
            <corners android:radius="@dimen/music_bottom_seek_radius" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/music_bottom_seek_secondary_progress" />
                <size android:height="@dimen/music_bottom_seek_height" />
                <corners android:radius="@dimen/music_bottom_seek_radius" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:angle="180"
                    android:endColor="@color/music_bottom_seek_progress_end"
                    android:startColor="@color/music_bottom_seek_progress_start"
                    android:type="linear"
                    android:useLevel="true" />
                <corners android:radius="@dimen/music_bottom_seek_progress_radius" />
            </shape>
        </clip>
    </item>
</layer-list>
